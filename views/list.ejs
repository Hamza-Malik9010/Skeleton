<!-- list.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Lists</title>
  <link rel="stylesheet" href="/styles.css">
  <!-- Include Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    
  <div class="container">
    <%- include('partials/header') %>

    <% if (Lists && Lists.length > 0) { %>
      <h2>Your Lists:</h2>
      <ul>
        <% Lists.forEach(function(list) { %>
          <li>
            <a href="/todos/<%= list._id %>"><%= list.listTitle %></a>
            <form action="/del-list" method="post" style="display:inline;">
              <input type="hidden" name="listID" value="<%= list._id %>">
              <button type="submit" class="delete-button">Delete</button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <h2>Create Your First List</h2>
    <% } %>

    <!-- Form to add a new list -->
    <form action="/add-list" method="post">
      <input type="text" name="listname" placeholder="New List Name" required>
      <button type="submit">Add List</button>
    </form>

    <a href="/logout">Logout</a>

    <%- include('partials/footer') %>
  </div>
</body>
</html>
