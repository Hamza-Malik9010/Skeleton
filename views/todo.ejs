<!-- todo.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Tasks</title>
  <link rel="stylesheet" href="/styles.css">
  <!-- Include Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <%- include('partials/header') %>

    <% if (todos && todos.length > 0) { %>
      <h2>Your Tasks:</h2>
      <ul>
        <% todos.forEach(function(todo) { %>
          <li>
            <span><%= todo.task %></span>
            <form action="/del-todo" method="post" style="display:inline;">
              <input type="hidden" name="todo_ID" value="<%= todo._id %>">
              <input type="hidden" name="listID" value="<%= listID %>">
              <button type="submit" class="delete-button">Delete</button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <h2>Create Your First Task</h2>
    <% } %>

    <!-- Form to add a new task -->
    <form action="/add-todo" method="post">
      <input type="text" name="task-text" placeholder="New Task" required>
      <input type="hidden" name="listID" value="<%= listID %>">
      <button type="submit">Add Task</button>
    </form>

    <a href="/lists">Back to Lists</a>

    <%- include('partials/footer') %>
  </div>
</body>
</html>
